# ===================================
# APPLICATION CONFIGURATION
# ===================================
NODE_ENV=development
PORT=3000
APP_NAME=CYNERZA Backend API
APP_VERSION=1.0.0

# ===================================
# DATABASE CONFIGURATION
# ===================================
# MongoDB Connection String
# Format: mongodb://USER:PASSWORD@HOST:PORT/DATABASE or mongodb+srv://...
MONGODB_URI=mongodb+srv://lucifer_7:Adi9438@lucifer.exygh60.mongodb.net/

# ===================================
# SECURITY CONFIGURATION
# ===================================
# JWT Secrets - CHANGE THESE IN PRODUCTION
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# Rate Limiting - Login attempts  
LOGIN_ATTEMPT_LIMIT=5
LOGIN_ATTEMPT_WINDOW=900

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRATION=300
OTP_MAX_ATTEMPTS=3


# ===================================
# CORS CONFIGURATION
# ===================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# ===================================
# RATE LIMITING
# ===================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===================================
# LOGGING CONFIGURATION
# ===================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ===================================
# API DOCUMENTATION
# ===================================
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# ===================================
# HEALTH CHECK
# ===================================
HEALTH_CHECK_ENABLED=true
DISK_THRESHOLD_PERCENT=90
MEMORY_HEAP_THRESHOLD=150MB
